{
  "name": "chrome-extension-timetrack",
  "version": "1.0.0",
  "description": "chrome extension for time tracking with toggl and GitHub Projects",
  "private": true,
  "scripts": {
    "build": "tsc && vite build",
    "check": "biome format --write ./src ./vite-env.d.ts ./vite.config.ts && biome check --apply ./src ./vite-env.d.ts ./vite.config.ts",
    "setup": "bash ./scripts/generate_manifest.sh"
  },
