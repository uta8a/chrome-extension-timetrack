  "license": "APL-2.0",
  "bugs": {
    "url": "https://github.com/uta8a/chrome-extension-timetrack/issues"
  },
  "homepage": "https://github.com/uta8a/chrome-extension-timetrack#readme",
  "devDependencies": {
    "@biomejs/biome": "1.2.2",
    "@types/chrome": "^0.0.237",
    "@types/node": "^20.2.6",
    "typescript": "^5.1.3",
    "vite": "^4.3.9"
  }
}
